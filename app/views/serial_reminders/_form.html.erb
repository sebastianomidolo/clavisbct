
<%= simple_form_for(@serial_reminder) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label, label:'Sollecito' %>
    <%= f.input :serial_title_id, as: 'hidden' %>
    <%= f.input :description, label:'Descrizione', input_html: {rows: 6, cols: 80} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>


