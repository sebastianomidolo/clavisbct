<%= simple_form_for(@container) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :label, as: 'string', input_html: {size: 20}, hint: 'Etichetta contenitore: deve iniziare con lettere e finire con un numero, es. SC1450' %>
   <%= f.association :clavis_library, collection: ClavisItem.owner_library, hint: 'Dove si trova il contenitore', include_blank: false, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value:'Salva' %>
  </div>
<% end %>
