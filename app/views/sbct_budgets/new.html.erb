<h4>Inserimento budget (deve essere presente in Clavis)</h4>

<%= simple_form_for(@sbct_budget) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% f.input :clavis_budget_id, label:'Id budget in Clavis' %>
    <%= f.association :clavis_budget, label:'Budget in Clavis', collection:ClavisBudget.label_select %>
    <%= f.association :sbct_supplier, label:'Fornitore (facoltativo)', collection:SbctSupplier.label_select(params,current_user) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>


