<%= render :partial => 'sbct_titles/homepage' %>

<form>
Lista eventi:
<%=
  status = params[:sbct_event_status]
  status = 'C' if status.blank?
  select_tag(:sbct_event_status,
    options_for_select(SbctEventStatus.all.collect {|e| [e.event_status_label,e.event_status_id]},
			status), :onchange=>'submit();', include_blank:false) %>
</form>

<%= link_to('<b>Inserisci evento</b>'.html_safe, new_sbct_event_path, class:'btn btn-warning') if can? :create, SbctEvent %>


<%= content_tag(:div, sbct_events_list(@sbct_events)) %>

