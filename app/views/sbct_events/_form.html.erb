

<%= simple_form_for(@sbct_event) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.association :sbct_event_type, label:'Tipologia' %>
    <%= f.association :sbct_event_status, label:'Status' %>
    <%= f.input :name, label:'Nome evento' %>
    <%= f.input :event_start, label:'Inizia il' %>
    <%= f.input :event_end, label:'Termina il' %>
<pre>    <%= f.input :description, hint:'', label:'Descrizione evento', input_html:{rows: 4, cols: 80} %> </pre>

  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>
