<%= simple_form_for(@procultura_card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :heading, input_html: {cols: 80, rows: 3} %>
   <%= f.input :sort_text, input_html: {cols: 80, rows: 3} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva modifiche' %>
  </div>


<% end %>
