<%= simple_form_for(@work_station) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id, label:'Postazione numero', hint:"Numero d'inventario della postazione senza zero iniziale"  %>
    <%= f.association :clavis_library, collection: ClavisItem.owner_library, hint: 'Biblioteca', include_blank: false, label: false %>
    <%= f.input :processor, collection: [['32 bit', '32'] ,['64 bit', '64']], label:'Architettura', as: :radio_buttons %>
    <%= f.input :monitor_id, hint: "Numero di censimento del monitor associato" %>
    <%= f.input :location, hint: "Per esempio: Banco prestiti piano terra" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value=>'Crea postazione' %>
  </div>
<% end %>
