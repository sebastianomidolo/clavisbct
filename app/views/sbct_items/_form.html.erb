
<%= simple_form_for(@sbct_item) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :id_titolo, as: 'hidden' %>
    <%= f.association :clavis_library, include_blank: false %>
	
    <%= f.input :numcopie, label:'Numero copie' %>
    <%= f.association :sbct_supplier, label:'Fornitore' %>
    <%= f.association :sbct_budget, label:'Budget' %>
    <%= f.association :sbct_order_status, label:"Stato dell'ordine" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>

