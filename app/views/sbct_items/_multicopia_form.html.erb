<%= simple_form_for(@sbct_item) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">

   <%= f.input :id_titolo, as: 'hidden' %>

   <% if params[:dl]=='true' %>
     <%= render partial:'supplier_select', locals: {f: f} %>
   <% else %>
     <%= render partial:'budget_select', locals: {f: f} if can? :manage, SbctItem %>
   <% end %>

   <%=
      collection = SbctTitle.libraries_select((can? :manage, SbctItem) ? nil : current_user)
      f.association :clavis_library, collection: collection, hint: 'Per selezione multipla tenere premuto <ctrl> e fare click sul nome delle biblioteche',
	 as:'select', include_blank:false, label:'Biblioteche', input_html:{multiple:true, size:collection.size} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>

