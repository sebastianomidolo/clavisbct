<%
access_link=[]
#access_link << bctcards_namespaces(current_user)
#access_link.flatten!
%>


<body>

<div id="wrap">

	<div id="top">
           <div class="rights">
           </div>
				<div id="search">
				</div>
				<div class="lefts">
				  <h1><a href="http://www.comune.torino.it/cultura/biblioteche/">Biblioteche Civiche Torinesi</a></h1>
				  <%=
				    if params[:namespace].blank?
				     content_tag(:h2, "Tutti i cataloghi digitalizzati")
				    else
 				     content_tag(:h2, link_to(BioIconograficoCard.namespaces[params[:namespace].to_sym], 'http://www.comune.torino.it/cultura/biblioteche/ricerche_cataloghi/bioiconografico.shtml',style:'background-color: white; padding: 2px'))
				    end
				  %>
				</div>
	</div>
	
	<div id="topmenu">
         <div class="rights">
         </div>
         <div class="lefts">
           <%= render :partial=>'/bctcards/menu_orizzontale' %>
         </div>

	</div>
	
	<div style="display: none" id="subheader">
	</div>
	
	
	<div id="main">
	  <div id="rightside">
	    <% access_link.each do |l| %>
             <%= content_tag(:li, l) %>
            <% end %>


 <div class="box">
 </div>


 </div>

 <div id="leftside">

  <%= yield %>

 </div>

</div>

	
	
