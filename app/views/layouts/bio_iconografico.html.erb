<% if signed_in? and !params[:lettera].blank? %>
 <%= content_tag(:h2, link_to("Carica file (#{params[:lettera]})", upload_bio_iconografico_cards_path(lettera:params[:lettera]))) if can? :upload, BioIconograficoCard  %>
