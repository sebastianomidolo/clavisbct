<%=
  if !user_session[:sbct_titles_ids].nil?
    content_tag(:div, sbct_titles_browse(@sbct_title,user_session[:sbct_titles_ids])) if user_session[:sbct_titles_ids].size>1
  end
%>
<!-- lista corrente: <%= content_tag(:div, user_session[:current_list]) %> -->

<%=
  res = []
  @sbct_title.sbct_lists.each do |l|
    # res << content_tag(:span, "#{link_to(l.to_label, sbct_titles_path(id_lista:l.id, budget_id:params[:budget_id], selection_mode:params[:selection_mode]))}".html_safe)
    res << content_tag(:span, "#{link_to(l.to_label, sbct_list_path(l.id,current_title_id:@sbct_title))}".html_safe) if !l.hidden or(l.owner_id==current_user.id)
  end

   chlist_lnk=''
   if current_user.role?(['AcquisitionManager','AcquisitionStaffMember','AcquisitionLibrarian'])
    if params[:req]=='chlist'
     chlist_lnk = link_to('[conferma assegnazioni]'.html_safe, sbct_title_path(req:''), class:'label label-info')
	   
    else
     chlist_lnk = link_to('inserisci in lista'.html_safe, sbct_title_path(req:'chlist'), class:'label label-success', title:'Inserisci/rimuovi il titolo dalle liste' )
    end
   end

  if res.size==0
    content_tag(:h5, "IdTitolo #{@sbct_title.id} #{chlist_lnk}".html_safe)
  else
    txt = res.size==1 ? 'nella lista' : 'nelle liste:'
    content_tag(:h5, "Titolo #{@sbct_title.id} #{chlist_lnk} presente #{txt} #{res.join(', ')}".html_safe)
  end
%>

