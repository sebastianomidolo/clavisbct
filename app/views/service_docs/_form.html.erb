
<%= simple_form_for(@service_doc) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :service_id, as:'hidden' %>
    <%= f.association :service_doc_type, include_blank:false %>
    <%= f.input :title %>
    <%= f.input :doc_text, label:'Descrizione', input_html: {rows: 6, cols: 80} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Crea' , class:'btn btn-success'%>
  </div>
<% end %>


