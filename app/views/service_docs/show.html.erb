
<%= content_tag(:p, "Documento relativo al servizio #{link_to(@service.to_label,@service)}".html_safe) %>
<%= content_tag(:h4, @service_doc.to_label) %>

<%= content_tag(:pre, @service_doc.doc_text) %>

<% if can? :manage, Service %>
<%= link_to('Modifica', edit_service_doc_path) %>
