<%= link_to("<b>Aggiungi immagine</b>".html_safe, d_objects_service_doc_path(@service_doc), class:'btn btn-warning') %>
<% end %>

<hr/>


<%= content_tag(:div, service_doc_attachments(@service_doc,params)) %>

