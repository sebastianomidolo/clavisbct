<%= simple_form_for(@d_objects_folder) do |f| %>
  <%= f.error_notification %>

  Inserire qui solo i dati che si applicano all'intero contenuto della cartella
  <div class="form-inputs">
    <%= f.association :access_right, label:'Accesso' %>

    <%= f.input :x_mid, label:'x_mid', as: 'integer' %> (manifestation_id di Clavis)
    <%= f.input :x_item_id, label:'x_item_id', as: 'integer' %> (item_id di Clavis)



    <%= f.input :x_ti, label:'x_ti', as: 'string', input_html: {size: 80, value:@d_objects_folder.html_decode(:x_ti)} %>
    <%= f.input :x_au, label:'x_au', as: 'string', input_html: {size: 80} %>
    <%= f.input :x_an, label:'x_an', as: 'string', input_html: {size: 20} %>
    <%= f.input :x_pp, label:'x_pp', as: 'string', input_html: {size: 20} %>
    <%= f.input :x_uid, label:'x_uid', as: 'integer' %>
    <%= f.input :x_sc, label:'x_sc', as: 'string', input_html: {size: 20} %>
    <%= f.input :x_dc, label:'x_dc', as: 'string', input_html: {size: 20} %>
  </div>

  <%= f.input :readme, label:'readme', as: :text, input_html: {rows: 3, cols: 80, value:@d_objects_folder.html_decode(:readme)} %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva modifiche' %>
  </div>
<% end %>

<pre>
  x_mid : manifestation id su Clavis
  x_item : item id su Clavis (esempio: quando si tratta della scansione di un esemplare)
  x_ti  : titolo
  x_au  : autore
  x_an  : anno pubblicazione
  x_pp  : numero (estremi) delle pagine/tavole scansionate (da pagina a pagina)
  x_uid : identificativo Utente Clavis che ha ordinato/pagato la scansione
  x_sc  : scadenza riserva per visualizzazione sullâ€™OPAC (esempio: 6 mesi)
  x_dc  : data di creazione dei files (aaaa-mm)
</pre>
