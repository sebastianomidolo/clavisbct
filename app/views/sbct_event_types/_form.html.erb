

<%= simple_form_for(@sbct_event_type) do |f|  %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :event_type_id, hint:'Scegliere un codice di tre lettere maiuscole', as: 'string', input_html: {size:3} %>
    <%= f.input :label, hint:'Descrizione della tipologia di evento' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva' , class:'btn btn-success'%>
  </div>
<% end %>

