<%= simple_form_for(@serial_title) do |f| %>
<%= f.error_notification %>

  <%= params.delete(:serial_title); hidden_params(params) %>
  <div class="form-inputs">
    <%= f.input :title, hint: "Titolo", label:false %>
    <%= f.input :prezzo_stimato, hint: "Prezzo stimato", label:false %>
    <%= f.input :estero, label:false, hint:'straniero' %> 
    <%= f.input :sospeso, label:false, hint:'cessato' %>
    <%= f.input :manifestation_id, hint: "Manifestation_id in Clavis", label:false %>
    <%= f.input :sortkey, hint: "Chiave di ordinamento", label:false %>
    <pre><%= f.input :note, hint: "Note interne", label:false, input_html: {cols: 80, rows: 3} %></pre>
    <pre><%= f.input :note_fornitore, hint: "Note per il fornitore", label:false, input_html: {cols: 80, rows: 3} %></pre>

  </div>
  <div class="form-actions">
    <%= f.button :submit, value:'Salva le modifiche' %>
  </div>
<% end %>
