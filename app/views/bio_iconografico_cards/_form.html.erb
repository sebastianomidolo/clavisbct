<%= simple_form_for(@bio_iconografico_card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :intestazione, as: 'string', input_html: {size: 40} %>
   <%= f.input :namespace, as: 'hidden' %>

   <% if can? :manage, BioIconograficoCard %>
   <%= f.input :lettera, collection: BioIconograficoCard.lettere, include_blank: false, label: false %>
   <% end %>
   <%= f.input :numero, as: 'integer', label:false, autofocus: true %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salva modifiche' %>
  </div>
<% end %>
